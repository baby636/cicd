{
    "_comment": "UNUSED FOR NOW! See builder/README.md for notes",

    "builders": [
        {
          "name": "local-cluster",
          "type": "vagrant",
          "provider": "vmware_desktop",
          "communicator": "ssh",
          "output_dir": ".tmp/output",
          "source_path": "bento/ubuntu-18.04"
        }
    ],

    "provisioners": [
        {
            "type": "ansible",
            "only": [
                "local-cluster"
            ],
            "playbook_file": "configurator/gitlab.yml",
            "extra_arguments": [
                "--connection=ssh",
                "--tags=prebake",
                "--extra-vars", "ansible_python_interpreter=/usr/bin/python3"
            ],
            "ansible_env_vars": [
                "ANSIBLE_SCP_IF_SSH=True"
            ]
        }
    ]
}
